{% extends 'base.html.twig' %}

{% block title %}{% trans %}Categories{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Product Category index{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Description{% endtrans %}</th>
                <th>{% trans %}Creation date{% endtrans %}</th>
                <th>{% trans %}Last modification date{% endtrans %}</th>
                <th>{% trans %}actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for productCategory in productCategories %}
            <tr>
                <td>{{ productCategory.id }}</td>
                <td>{{ productCategory.name }}</td>
                <td>{{ productCategory.description }}</td>
                <td>{{ productCategory.creationDate ? productCategory.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ productCategory.lastModificationDate ? productCategory.lastModificationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('product_category_show', {'id': productCategory.id}) }}">{% trans %}show{% endtrans %}</a>
                    <a href="{{ path('product_category_edit', {'id': productCategory.id}) }}">{% trans %}edit{% endtrans %}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_category_new') }}">{% trans %}Create new{% endtrans %}</a>
{% endblock %}
